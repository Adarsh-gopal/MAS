<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_approval_remarks_form" model="ir.ui.view">
        <field name="name">purchase.approval.remarks</field>
        <field name="model">purchase.approval.remarks</field>
        <field name="arch" type="xml">
            <form string="Remaks wizard">
               
                <group>
                    <field name="remarks" /> 
                </group>
                <footer>
                    <button name="reject_order"
                        string="Reject"
                        type="object"
                        class="btn-primary"/>
                    <button string="Discard"
                        class="btn-secondary"
                        special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_approval_remarks" model="ir.actions.act_window">
        <field name="name">Remarks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.approval.remarks</field>
        <field name="binding_model_id" eval="False"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="purchase_approval_remarks_form"/>
        <field name="target">new</field>
    </record>
</odoo>
