<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id = "resource_group_form_view" model="ir.ui.view">
            <field name="name">resource.group</field>
            <field name="model">resource.group</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <group>
                                <group>
                                    <field name='name' required="1"/>
                                </group>
                                <group>
                                <field name='start_date' required="1"/>
                                <field name='end_date'/>
                                </group>
                            </group>
                            <field name='employee_line_ids' mode="tree" required="1">
                                <tree>
                                    <field name='name'/>
                                    <field name='department_id'/>
                                </tree>
                            </field>

                    </sheet>
                </form>
            </field>
        </record>

         <record id="resource_group_tree_view" model="ir.ui.view">
            <field name="name">resource.group.tree</field>
            <field name="model">resource.group</field>
            <field name="arch" type="xml">
                <tree string="Resource Group" >
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                </tree>
            </field>
        </record>


         <record id="resource_group_action" model="ir.actions.act_window">
            <field name="name">Resource Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">resource.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id = 'resource_group_menu'
            parent="mrp.menu_mrp_configuration"
            action="resource_group_action"
           
            />



        <record id="mrp_r_w_form_view_inherit_shift" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.inherit</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">
                <field name='bom_id' position ="after">
                    <field name='resource_id'/>
                </field>
                <!-- <xpath expr="//page[@name='worksheet']" 
                    position='after'>
                   <page  name='resource_group'
                        string ='Resource Group'>
                        <group>
                        <group>
                            <field name='shift_name'/>
                        </group>
                        <group>
                            <field name='start_date'/>
                            <field name='end_date'/>
                        </group>
                        </group>
                        <field name='employee_line_ids' /> 

                    </page>
                </xpath>
 -->
               
            </field>
        </record>

        <record id="mrp_routing_workcenter_tree_view_resource" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.inherit</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='workcenter_id']" position="after">
                    <field name='resource_id'/>
                </xpath>
            </field>
        </record>

                

        <record model="ir.ui.view" 
            id="mrp_production_workorder_tree_editable_view_inherit_shift">
            <field name="name">mrp.workorder.tree</field>
            <field name="model">mrp.workorder</field>
            <field name="type">tree</field>
            <field name="inherit_id" 
                ref="mrp.mrp_production_workorder_tree_editable_view"/>
            <field name="arch" type="xml">
              
                <xpath expr="/tree/field[@name='state']" position="before">
                    <field name="resource_id" required="1"/>
                    <!-- <field name="resource_name" /> -->
                    <field name="shif_calendar_id" />
                    <field name="employee_ids"  widget='many2many_tags' />
                    <field name="employee" invisible='1' />
                    <field name='is_shift_change' invisible='1' />
                </xpath>
            </field>
        </record>

    <record id="workcenter_line_gantt_production_shift" model="ir.ui.view">
        <field name="name">mrp.production.work.order.gantt.production</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" 
                ref="mrp.workcenter_line_gantt_production"/>
            <field name="arch" type="xml">
                 <xpath expr="//gantt/field[@name='workcenter_id']" position="after">
                    <field name="employee"  />
                </xpath>

                 <xpath expr="//templates//ul" position="inside">
                    <li><strong>Employee: </strong> <t t-esc="employee"/></li>
                </xpath>


          
        </field>
    </record>
     

    <record id="workcenter_line_gantt_production_shift_filter" model="ir.ui.view">
        <field name="name">mrp.production.work.order.gantt.production</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" 
                ref="mrp.view_mrp_production_workorder_form_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
           
           <group expand="0" string="Group By">
                    <filter string="Shift" name="resource_id" domain="[]" context="{'group_by': 'resource_id'}"/>
                    <filter string="Employee" name="employee" domain="[]" context="{'group_by': 'employee'}"/>
                    <filter string="Resource" name="resource_name" domain="[]" context="{'group_by': 'resource_name'}"/>
                    
                </group>
            </xpath>
        </field>
    </record>


     
<record model="ir.actions.act_window" id="action_mrp_workorder_production_shift">
        <field name="name">Planning By Collective</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.workorder</field>
        <field name="domain">[('production_state','not in',('done','cancel'))]</field>
        <field name="view_mode">gantt,tree,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="mrp.view_mrp_production_workorder_form_view_filter"/>
        <field name="view_id" ref="mrp.workcenter_line_gantt_production"/>
        <field name="context">{'search_default_shift_id': True, 'search_default_resource_group': True,
            'default_workcenter_id': True}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No work orders to do!
          </p><p>
            Work orders are operations to do as part of a manufacturing order.
            Operations are defined in the bill of materials or added in the manufacturing order directly.
          </p>
        </field>
    </record>
               
        <menuitem id="menu_mrp_workorder_todo_shift"

                action="action_mrp_workorder_production_shift"
                parent="mrp.mrp_planning_menu_root"
               />


    </data>
</odoo>