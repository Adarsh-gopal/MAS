<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format -->
        <record id="payment_temp" model="report.paperformat">
            <field name="name">Woo - Payment Reciept Template </field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">42</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">38</field>
            <field name="dpi">90</field>

            
        </record>

        <record id="payment_reciept1_report" model="ir.actions.report">
            <field name="name">WOO Payment Reciept Template</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">woo_payment_reciept.payment_reciept1</field>
            <field name="report_file">woo_payment_reciept.payment_reciept1</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Reciept - %s' % (object.name)) or 'Reciept - %s' % (object.name)</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="woo_payment_reciept.payment_temp"/>
 
        </record>
    
       
        <template id="payment_reciept1">
         
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                 <t t-if="not o and doc">
                        <t t-set="o" t-value="doc"/>
                    </t>

                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                   
                    <t t-call="woo_payment_reciept.external_layout_for_headerfooter_payment">
                    
                      <div class="page">
                       <table class="table table-sm  " width="100%" style="width:100%;">
                        <tr>
                            <td style="border-top:none !important;">
                                
                                 <div class="row" >
                                            
                                            <div class="col-6">
                                              
                                               
                                                <t t-if="o.partner_id" class="text-center">
                                                    <b><t t-esc="'Received with thanks from :'"></t><i><span t-field="o.partner_id" style="font-size:14px;"/></i></b><br/>
                                                </t>

                                                <t t-if="o.partner_id.street" class="text-center">
                                                   <i> <span t-field="o.partner_id.street" style="font-size:14px;"/></i>,
                                                </t>
                                               
                                                <t t-if="o.partner_id.street2" class="text-center">
                                                    <i><span t-field="o.partner_id.street2" style="font-size:14px;"/></i>,
                                                </t>

                                                <t t-if="o.partner_id.city" class="text-center">
                                                    <i><span t-field="o.partner_id.city" style="font-size:14px;"/></i>,
                                                </t>

                                                <t t-if="o.partner_id.country_id" class="text-center">
                                                    <i><span t-field="o.partner_id.country_id" style="font-size:14px;"/></i><br/>
                                                </t>

                                                <t t-if="o.partner_id.vat" class="text-center">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Your VAT # : '"/></b><span t-field="o.partner_id.vat"/></h6>
                                                </t>

                                                <t t-else="">
                                                  <h6 style="font-size:14px;"><b><t t-esc="'Your VAT # : '"/></b><span >N/A</span></h6>
                                                </t>

                                                
                                                <t t-if="o.partner_id.business_name" class="text-center">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Business Name : '"/></b><span t-field="o.partner_id.business_name"/> </h6>
                                                </t>

                                                 <t t-set="cp" t-value="o.partner_id.child_ids.filtered(lambda l: l.type in ('contact'))[:1]"/>
                                                <t t-if="cp" class="text-center">
                                               
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Contact Person: '"/></b><t ><span t-field="cp.name"/></t> </h6>
                                                </t>

                                                <t t-if="cp.phone or cp.email" class="text-center">
                                                    <h6 style="font-size:14px;"><b><i class="fa fa-phone" aria-hidden="true"></i> &amp;nbsp;&amp;nbsp; </b><span t-field="cp.phone"/>  &amp;nbsp;&amp;nbsp;
                                                
                                                   <b><i class="fa fa-envelope" aria-hidden="true"></i> &amp;nbsp;&amp;nbsp; </b><span t-field="cp.email"/> </h6>
                                                </t>

                                            </div>

                                            <div class="col-6">
                                                <t t-if="o.date" class="text-center">
                                                <h6 style="font-size:14px;"><b><t t-esc="'Date:'"></t></b><i> <span t-esc="o.date.strftime('%d %b %Y')" style="font-size:14px;"/></i><br/></h6>
                                                </t>
                                                
                                                <t t-if="o.custom_payment_method" class="text-center">
                                                   <h6 style="font-size:14px;"> <b><t t-esc="'Mode:'"></t></b><i> <span t-field="o.custom_payment_method" style="font-size:14px;"/></i><br/></h6>
                                                </t>

                                                <t t-if="o.custom_cheque_no" class="text-center">
                                                   <h6 style="font-size:14px;"> <b><t t-esc="'Cheque No:'"></t></b><i> <span t-field="o.custom_cheque_no" style="font-size:14px;"/></i><br/></h6>
                                                </t>
                                                <t t-else="">
                                                   <h6 style="font-size:14px;"> <b><t t-esc="'Cheque No:'"></t></b><i> <span t-esc="'N/A'" style="font-size:14px;"/></i><br/></h6>
                                                </t>
                                                <t t-if="o.creditdebit" class="text-center">
                                                   <h6 style="font-size:14px;"> <b><t t-esc="'Credit/Debit Card:'"></t></b><i> <span t-field="o.creditdebit" style="font-size:14px;"/></i><br/></h6>
                                                </t>
                                                <t t-else="">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Credit/Debit Card:'"></t></b><i> <span t-esc="'N/A'" style="font-size:14px;"/></i><br/></h6>
                                                </t>
                                            
                                                <t t-if="o.currency_id" class="text-center">
                                                   <h6 style="font-size:14px;"> <b><t t-esc="'Currency : '"/></b><i><span t-field="o.currency_id.name"/></i><br/></h6>
                                                </t>

                                            </div>

                                            
                                        </div>
                                        
                        
                            </td>
                        </tr>
                       </table>

                        <table class="table table-sm" width="100%" style="width:100%;">
                            <tr>
                                <td style="border-top:none">
                                    <div class="row">
                                        <div class="col">
                                            

                                            <t t-if="o.amount" class="text-center">
                                               <h6 style="font-size:14px;"> <b><t t-esc="'Amount : '"/></b><i><span t-field="o.amount"/></i><br/></h6>
                                            </t>

                                            <t t-if="o.ref" class="text-center">
                                               <h6 style="font-size:14px;"> <b><t t-esc="'Details : '"/></b><i><span t-field="o.ref"/></i><br/></h6>
                                            </t>

                                            <t t-if="o.currency_id" class="text-center">
                                               <h6 style="font-size:14px;"> <b><t t-esc="'Amount in words : '"/></b><i><span t-esc="o.amount_to_text(o.amount)"/></i><br/></h6>
                                                 
                                            </t>


                                        </div>
                                    </div>

                                    <div class="row" style = "margin-top:60px;position:relative;text-align:center">
                                        <div class="col-6" style="text-align:left;">
                                            <label style="font-size:16px;"><strong>Prepared By :  </strong><b><span t-field="o.user_id"/></b></label>
                                        </div>
                                        <div class="col-6" style="text-align:right;">
                                            <label style="font-size:16px;"><strong>Authorized Sign   </strong></label>
                                        </div>
                                        <!-- <div class="col-8"> -->
                                            <!-- <t t-set="auth" t-value="request.env['mail.message'].search([('model','=','account.move'),('res_id','=',o.id),('subtype_id','=',request.env.ref('woo_payment_reciept.woo_payment_confirmed').id)])"/> -->
                                            <!-- <label style="font-size:16px;"><strong>Authorized By:</strong> -->
                                          <!--   <t t-if="auth">
                                                <span t-field="auth.create_uid"></span>
                                            </t> -->
                                            <!-- <t t-if="confirmed_user">
                                                <span t-field="confirmed_user.name"></span>
                                            </t>
                                            </label>
                                        </div> -->
                                
                                    </div>

                                    <!-- <div class="row" style="page-break-inside: avoid !important;">
                                        <div class="col-12">
                                                <h6 class="text-center" style="font-size:15px;color:red"><b>Note:</b> This is computer generated quotation, hence no signature required.</h6>
                                        </div>
                                    </div> -->

                                </td>
                            </tr>
                        </table>

                        <div >
          
          <hr/>
         
                       
                       
                        <img class="text-right" t-if="company.footer_custom" t-att-src="'data:image/png;base64,%s' % to_text(company.footer_custom)" style="margin-left:-24px;height:1%;width:1%;padding-left:0px;"/>
                        <!-- <img t-if="company.footer_custom" t-att-src="'data:image/png;base64,%s' % to_text(company.footer_custom)" style="background-size:contain;max-width:50%;height:auto;opacity:10 !important;"/>      -->
                        <img t-if="company.footer_custom" t-att-src="'data:image/png;base64,%s' % to_text(company.footer_custom)" style="background-size:contain;max-width:100%;height:auto;opacity:10 !important;"/>
                        <div class="row">
                            
                                <div class="col-4" style="text-align:left;">
                                    <!-- <i class="fa fa-envelope" aria-hidden="true"> &amp;nbsp;&amp;nbsp;</i>   <i> <span class="mk-footer-copyright cl" style="font-size:14px;" t-field="company.email"/></i> -->
                                   <span>
                                    <i class="fa fa-facebook-square" style="font-size:16px;" aria-hidden="true"></i>
                                    <span t-field="company.facebook" style="font-size:1px;color:white;"/>   
                                   </span>

                                   <span>
                                    <i class="fa fa-instagram" style="font-size:16px;" aria-hidden="true"></i>
                                    <span t-field="company.instagram" style="font-size:1px;color:white;"/>   
                                   </span>

                                   <span>
                                    <i class="fa fa-globe" style="font-size:16px;" aria-hidden="true"></i>
                                    <span t-field="company.email" style="font-size:1px;color:white;"/>   
                                   </span>
                                   &amp;nbsp;&amp;nbsp;
                                   

                                   <span>
                                    <i class="fa fa-envelope" style="font-size:16px;" aria-hidden="true"></i>
                                    <span t-field="company.website" style="font-size:1px;color:white;"/>   
                                   </span>
                                         
                                </div>

                                 

                                <div class="col-8" style="text-align:center;">
                                    <i> <span class="mk-footer-copyright cl" style="font-size:14px;" t-field="company.showrooms"></span></i>    
                                </div>

                                 
                            
                                <!-- <div class="col-2" style="text-align:right;">
                                    <small style="font-size:14px;">
                                        <span>Page</span>
                                        <span class="page" />
                                        of
                                        <span class="topage" />
                                    </small>
                                
                                </div>   -->
                        </div>

                        

                            
                              
        </div>
                      </div>
                          
                            
                       
                       
                    </t>
                   
                </t>
            </t>
            
        </template>

        
    </data>
</odoo>  