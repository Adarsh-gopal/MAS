<odoo>
  <data>
    <!-- Product view inherite -->
  <record id="sales_for_light_and_shades_products_view" model="ir.ui.view">
    <field name="name">products.view</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='uom_po_id']" position="after">
            <field name="sales_unit_of_measure" string="Sales Unit Of Measure"/>
      </xpath>
    </field>
  </record>

  <!-- Product Variants view inherite -->
  <record id="sales_for_light_and_shades_productsVariants_view" model="ir.ui.view">
    <field name="name">productsVariants.view</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='uom_po_id']" position="after">
            <field name="sales_unit_of_measure" string="Sales Unit Of Measure"/>
      </xpath>
    </field>
  </record>

  <!-- Quatation Create view inherite -->
  <record id="sales_for_light_and_shades_QuationCreate_view" model="ir.ui.view">
    <field name="name">QuationCreate.view</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']//tree[1]//field[@name='product_uom']" position="after">
            <field name="suom_qty" string="Quantity in SUoM" />
            <field name="sales_unit_of_measure" string="SUoM" readonly="1"/>
      </xpath>
    </field>
  </record>


  <record id="sales_for_light_view" model="ir.ui.view">
    <field name="name">Account.move.view</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='product_uom_id']" position="after">
          <!-- <field name = "line_ids.move_id.move_type" invisible = "1"/> -->
            <field name="suom_qty" string="Quantity in SUoM"  attrs="{'column_invisible':[('parent.move_type','in',('in_invoice','in_refund','out_refund','entry','out_receipt','in_reciept'))]}"/>
            <field name="sales_unit_of_measure" string="SUoM" readonly="1"  attrs="{'column_invisible':[('parent.move_type','in',('in_invoice','in_refund','out_refund','entry','out_receipt','in_reciept'))]}"/>
            <!-- <field name="custom_price" string="Unit Price"/> -->
        </xpath>
        <!-- <xpath expr="//field[@name='price_unit']" position="replace">
          <field name="price_unit" invisible="1"/>
        </xpath> -->
         <xpath expr="//field[@name='line_ids']//tree[1]//field[@name='product_id']" position="after">
            <field name="suom_qty" string="Quantity in SUoM" invisible="1"/>
            <field name="sales_unit_of_measure" string="SUoM" invisible="1"/>
             <!-- <field name="price_subtotal" string="Sub total" invisible="1"/>
            <field name="custom_price" string="Price" invisible="1"/> -->
        </xpath>
    </field>
  </record>

  <record id="view_picking_form_inherit_lns" model="ir.ui.view">
      <field name="name">stock.picking.form.lns</field>
      <field name="model">stock.move.line</field>
      <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
      <field name="arch" type="xml">
          <field name="product_id" position="after">
              <field name="custom_qty"/>
              <field name="sales_unit_of_measure"/>
          </field>
      </field>
  </record>

  <record id="view_move_form_inherit_lns" model="ir.ui.view">
      <field name="name">stock.move.form.lns</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
              <field name="custom_qty" invisible='1'/>
          </xpath>
      </field>
  </record>

  </data>
</odoo>