<odoo>
  <data>


    <record model="ir.ui.view" id="view_country_state_tree_gst_india">
      <field name="name">view country state tree gst india</field>
      <field name="model">res.country.state</field>
      <field name="inherit_id" ref="base.view_country_state_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='code']" position="after">
          <field name="gst_code" attrs="{'required': [('country_id', '=', 104)]}"/>
        </xpath>
      </field>
    </record>


   
  </data>
</odoo>