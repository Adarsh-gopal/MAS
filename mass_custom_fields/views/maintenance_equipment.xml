<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="generate_asset_equipment_item_view" model="ir.ui.view">
            <field name="name">generate.asset.reference.view</field>
            <field name="model">generate.asset.equipment</field>
            <field name="inherit_id" ref="maintenance_integ_with_asset.generate_asset_equipment_wiz_view_form"/>
            <field name="arch" type="xml">
            <!-- as_equipment -->
                <field name="number_of_equiments" position="after"> 
                    <field name="hsn_code_id" options="{'no_create': True, 'no_create_edit':True}"/>
                </field>
            </field>
        </record>

        <record id="maintenance_equipment_item_view" model="ir.ui.view">
            <field name="name">maintenance.equipment.reference.view</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <field name="maintenance_team_id" position="before">
                    <button type="object" name="update_name" class="btn-primary" string="Update Name"/>
                </field>
            <!-- as_equipment -->
                <field name="workcenter_id" position="after"> 
                    <field name="hsn_code_id" options="{'no_create': True, 'no_create_edit':True}"/>
                </field>
            </field>
        </record>


        

    </data>
</odoo>