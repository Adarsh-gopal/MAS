<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="sales_summary_view__report" model="ir.ui.view">
          <field name="name">sales.summary.report.form</field>
          <field name="model">sales.summary.report</field>
          <field name="arch" type="xml">
              <form string="Inventory Base Report"  create="false" edit="false">
                  <sheet>
                      <group>
                      <field name='product_name_sale'/>
  
                      <field name='date'/>
                      <!-- <field name='data_sent'/> -->
                  </group>
                  </sheet>
              </form>
          </field>
      </record>

      <record id="sales_summary_view__report_tree" model="ir.ui.view">
          <field name="name">sales.summary.report.tree</field>
          <field name="model">sales.summary.report</field>
          <field name="arch" type="xml">
              <tree string="Inventory Base Report"  create="false" edit="false">


                      <field name='invoice_number_sale'/>
                      <field name='date'/>
                      <field name='analytic_account_id_sale'/>
                      <field name='customer_code_sale'/>
                      <field name='customer_name_sale'/>
                      <field name='gst_no_sale'/>


                      <field name='customer_sate_sale'/>
                      <field name='customer_city_sale'/>

                      <field name='sales_team_sale'/>
                      <field name='sales_person_sale'/>

                      <field name='journal_sale'/>
                      <field name='currency_sale'/>

                      <field name='sale_order_no_sale'/>
                      <field name='sale_order_date_sale'/>

                      <!-- <field name='journal_sale'/> -->
                      <!-- <field name='terms_del_sale'/> -->

                      <!-- <field name='freight_charges_sale'/> -->
                      <field name='product_cat_sale1'/>

                  

                      <field name='product_cat_sale2'/>
                      <field name='product_cat_sale3'/>

                      <field name='product_code_sale'/>
                      <field name='product_name_sale'/>

                      <field name='hsn_code_sale'/>
                      <field name='uom_sale'/>

                      <field name='unit_price_sale'/>
                      <field name='qty_invoiced_sale'/>

                      <field name='discount_per'/>
                      <field name='discount_amount'/>                      

<!--                       <field name='tax_one_sale'/>
                      <field name='tax_one_percent'/>
                      <field name='tax_one_amount'/>
                      <field name='tax_two_sale'/>
                      <field name='tax_two_percent'/>
                      <field name='tax_two_amount'/> -->



                      
                      <field name='cgst_rate_sale'/>
                      <field name='cgst_amount_sale'/>
                      
                      <field name='sgst_rate_sale'/>
                      <field name='sgst_amount_sale'/>
                      
                      <field name='igst_rate_sale'/>
                      <field name='igst_amount_sale'/>
                      
                      <field name='tcs_rate_sale'/>
                      <field name='tcs_amount_sale'/>
                      <field name='other_tax_name'/>
                      <field name='other_tax_rate'/>
                      <field name='other_tax_amount'/>
                      
                      <field name='total_tax_sale'/>
                      <field name='amount_exc_sale'/>
                      <field name='amount_inclusive_sale'/>
                      <field name='currency_name'/>
                      <field name='payment_state_sale'/>

   

              </tree>
          </field>
      </record>


      <record id="sales_summary_report_search" model="ir.ui.view">
            <field name="name">sales.summary.report.search</field>
            <field name="model">sales.summary.report</field>
            <field name="arch" type="xml">
                <search string="Inventorty">
                    <field name="product_name_sale"/>

                    <!-- <field name="transaction_types"/> -->

                <group expand="0" string="Group By">
                    <filter string="Product" name="product_name_sale" domain="" context="{'group_by':'product_name_sale'}"/>
                    <filter string="Date" name="date" domain="" context="{'group_by':'date'}"/>

                    <!-- <filter string="Transaction Type" name="transaction_types" domain="" context="{'group_by':'transaction_types'}"/> -->
                </group>
                
                </search>
            </field>
        </record>


    <record id="view_pivot_report_data" model="ir.ui.view">
      <field name="name">pivot</field>
      <field name="model">sales.summary.report</field>
      <field name="arch" type="xml">
        <pivot string="Pivot View">
           <field name="product_name_sale" type="row"/>
           <!-- <field name="value" type="measure"/> -->
        </pivot>
      </field>
    </record>

      <record id="action_report_data" model="ir.actions.act_window">
            <field name="name">Sales Register Report</field>
            <field name="res_model">sales.summary.report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_id" ref="sales_summary_view__report_tree"/>    
      </record>

       <record id="sale_summery_server_action" model="ir.actions.server">
            <field name="name">Generate Sale Register Report</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">records.sale_summery()</field>
        </record>

      <menuitem 
          action="action_report_data" 
          id="menu_sales_summary_action"
          parent="sale.menu_sale_report"
          sequence="3"
      />
    </data>

</odoo>



