<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

             <record id="mas_account_move_form_inherit" model="ir.ui.view">
                <field name="name">account.move.maso.form_inherit</field>
                <field name="model">account.move</field>
                <field name="inherit_id" ref="account.view_move_form"/>
                <field name="arch" type="xml">
                <field name='edi_state' position="after">
                    <field name="po_no_inv" attrs="{'invisible':[('move_type', 'not in', ('out_invoice','out_refund'))]}"/>
                    <field name="po_date_inv" attrs="{'invisible':[('move_type', 'not in', ('out_invoice','out_refund'))]}"/>    
                    <field name="no_of_copies" attrs="{'invisible':[('move_type', 'not in', ('out_invoice','out_refund'))]}"/> 
                   
                </field>
            </field>                   
        </record>

        <record id="mas_sale_order_form_inherit" model="ir.ui.view">
                <field name="name">sale.order.fields</field>
                <field name="model">sale.order</field>
                <field name="inherit_id" ref="sale.view_order_form"/>
                <field name="arch" type="xml">
                <field name='source_id' position="after">
                    <field name="po_no"/>  
                    <field name="po_date"/>  
                    
                </field>
            </field>                   
        </record>
    </data>
</odoo> 